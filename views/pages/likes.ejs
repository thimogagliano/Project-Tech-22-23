<head>
    <%- include('../partials/head') %>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main>
        <section>
            <% likes.forEach(like => { %>
                <section>
                    <h3><%= like.gebruikersnaam %></h3>
                    <ul>
                        <li>Leeftijd: <%= like.leeftijd %></li>
                        <li>Genres: <% like.muziekgenres.forEach((genre, index) => { %>
                            <% if (index + 1 < like.muziekgenres.length) { %>
                                <%= genre + "," %>
                            <% } else { %>
                                <%= genre %>
                            <% } %>
                        <% }) %></li>
                        <li>Objectid: <%= like._id %></li>
                    </ul>
                    <form action="/results" method="post">
                        <button name="like" type="submit" value="<%= like.gebruikersnaam %>">Remove</button>
                    </form>
                </section>
            <% }) %>
        </section>
    </main>
    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>
</html>